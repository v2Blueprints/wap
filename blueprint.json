{
  "identifier": "wap",
  "about": {
    "title": "Wap",
    "explanation": "Web Application Proxy"
  },
  "configuration": {
    "default_site": ""
  },
  "volumes": [
    {
      "destination": "/etc/nginx/engines.d/",
      "name": "config"
    },
    {
      "destination": "/etc/nginx/ssl",
      "name": "certs"
    }
  ],
  "bindings": [
    {
      "type": "embed",
      "runtimes": [
        "lxd"
      ],
      "target": {
        "repository": "https://github.com/v2Blueprints/enginesd_debian_base"
      }
    }
  ],
  "images": [
    {
      "runtimes": [
        "docker"
      ],
      "identifier": "enginesd_debian_base"
    }
  ],
  "system_packages": {
    "adds": [
      "nginx"
    ]
  },
  "ports": [
    {
      "start_port": 8000,
      "end_port": 8000,
      "protocol": "tcp",
      "external_port": 80
    },
    {
      "start_port": 4430,
      "end_port": 4430,
      "protocol": "tcp",
      "external_port": 443
    }
  ],
  "binding_target": {
    "service": {
      "fqdn": "^^domain.fqdn^^",
      "protocol": "https",
      "subdomain": "^^binder.identifier^^",
      "host": "^^domain.ip_address^^",
      "port": null
    }
  }
}
