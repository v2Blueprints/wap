{
  "identifier": "wap",
  "about": {
    "title": "Wap",
    "explanation": "Web Application Proxy"
  },
  "configuration": {
    "default_site": ""
  },
  "volumes": [
    {
      "destination": "/etc/nginx/engines.d/",
      "name": "config"
    },
    {
      "destination": "/etc/nginx/ssl",
      "name": "certs"
    }
  ],
  "system_packages": {
    "adds": [
      "nginx"
    ]
  },
  "ports": [
    {
      "container_port,": 8000,
      "end_port": 8000,
      "protocol": "tcp",
      "host_port": 80
    },
    {
      "container_port,": 4430,
      "end_port": 4430,
      "protocol": "tcp",
      "host_port": 443
    }
  ],
  "binding_target": {
    "service": {
      "fqdn": "^^domain.fqdn^^",
      "protocol": "https",
      "subdomain": "^^binder.identifier^^",
      "ip_address": "^^consumer.ip_address^^",
      "port": null
    }
  }
}
