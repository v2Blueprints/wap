{
  "identifier": "wap",
  "about": {
    "title": "Wap",
    "explanation": "Web Application Proxy"
  },
  "configuration": {
    "default_site": ""
  },
  "volumes": [
    {
      "destination": "/etc/nginx",
      "source": "/var/lib/engines/volumes/wap/config"
    },
    {
      "destination": "/etc/nginx/ssl",
      "source": "/var/lib/engines/volumes/wap/certs"
    }
  ],
  "bindings": [
    {
      "type": "embed",
      "runtimes": [
        "lxd"
      ],
      "target": {
        "repository": "https://github.com/v2Blueprints/enginesd_debian_base"
      }
    }
  ],
  "images": [
    {
      "runtimes": [
        "docker"
      ],
      "identifier": "enginesd_debian_base"
    }
  ],
  "system_packages": {
    "adds": [
      "nginx"
    ]
  },
  "ports": [
    {
      "start_port": 8000,
      "end_port": 8000,
      "protocol": "tcp",
      "external_port": 80
    },
    {
      "start_port": 4430,
      "end_port": 4430,
      "protocol": "tcp",
      "external_port": 443
    }
  ],
  "binding_target": {
    "fqdns": "^^binder.fqdn^^",
    "https": "true",
    "http": "true",
    "host": "^^binder.ip_address^^",
    "port": "^^binder.port^^"
  }
}
